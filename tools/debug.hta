<!DOCTYPE html>
<meta charset="utf-8"/>
<meta http-equiv="x-ua-compatible" content="ie=11"/>
<title>Debug</title>
<style>
	body {
		margin: 0;
		background-color: magenta;
		font-family: "Segoe UI";
	}
	main {
		display: inline-block;
		background-color: white;
	}
	dl {
		margin: 0;
		padding: 1em;
	}
	dt {
		font-style: italic;
	}
	dd {
		white-space: pre;
		font-weight: bold;
	}
</style>
<script>
	function add(key, value) {
		const dl = document.querySelector("dl");
		const dt = document.createElement("dt");
		const dd = document.createElement("dd");
		dt.textContent = key;
		dd.textContent = value;
		dl.appendChild(dt);
		dl.appendChild(dd);
	} 
	document.addEventListener("DOMContentLoaded", function() {
		add("document.characterSet", document.characterSet); // utf-8
		add("document.documentMode", document.documentMode); // 11
		add("document.title", document.title); // Debug
		add("navigator.language", navigator.language); // de-DE
		// add("navigator.userAgent", navigator.userAgent);
	});
	addEventListener("load", function() {
		const main = document.querySelector("main");
		const rect = main.getBoundingClientRect();
		const width = rect.width + 22;
		const height = rect.height + 56;
		resizeTo(width, height);
		moveTo(
			(screen.availWidth / 2) - (width / 2),
			(screen.availHeight / 2) - (height / 2)
		);
	});
</script>
<main>
	<dl></dl>
</main>
